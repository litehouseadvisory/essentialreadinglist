
<%= form_for(@book.comments.build(book_id: @book.id, user_id: current_user.id)) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="field">
		<%= f.text_area :comment, placeholder: "add a review for this book..." %>
		<%= f.hidden_field :book_id %>
		<%= f.hidden_field :user_id %>
	</div>
	<%= f.submit "Save review", class: "btn btn-large btn-primary" %>
<% end %>	