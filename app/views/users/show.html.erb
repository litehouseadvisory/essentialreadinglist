<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %> 	
				<% if @user.admin %>
					<p>ADMINISTRATOR</p>
				<% end %>
			</h1>
		</section>
		<section>
			<%= render 'shared/stats' %>
		</section>
		<section>	
			<p>Member of the GWERL for</p>
			<p><%= distance_of_time_in_words(Time.now,@user.created_at) %> </p>				
		</section>
	</aside>
	<div class="span8">
		<%= render 'follow_form' if signed_in? %>
		<% if @user.microposts.any? %>
		<h3>Microposts (<%= @user.microposts.count %>)</h3>
		<ol class="microposts">
			<%= render @microposts %>
		</ol>
		<%= will_paginate @microposts %>
		<% end %>
		<% if @user.books.any? %>
		<h3>Books Added (<%= @user.books.count %>)</h3>
		<ol class="microposts">
			<%= render @books %>
		</ol>
		<%= will_paginate @books %>
		<% end %>
	</div>		
</div>
			